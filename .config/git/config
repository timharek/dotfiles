[core]
	excludesfile = ~/.config/git/ignore
	editor = nvim
[init]
	defaultBranch = main
[alias]
  s = status
  d = diff
  b = branch 
  ba = branch -av
  bD = branch -D
  bd = branch -d

  c = commit -s -S
  ca = c -a
  a = c --amend 
  ae = a --no-edit

  p = push
  pnew = !git push --set-upstream origin $(git branch --show-current)

  co = checkout

  l = log --all --color --graph --pretty=format:'%Cred%h%Creset %G?%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  hd = show -p --pretty="tformat:"

  rem = remote -v
  pa = !git remote | xargs -L1 git push # Push to all remotes
  pab = !git remote | xargs -L1 git push --all # Push all branches to all remotes

  cleanup = "!git branch --merged | grep  -v '\\*\\|main\\|master\\|develop\\|production' | xargs -n 1 git branch -d"
  cleanupb = "!git branch -r --merged | grep  -v '\\*\\|main\\|master\\|develop\\|production' | xargs -n 1 git branch -r -d"

  fuckit = reset --hard
[commit]
  gpgSign = true
  verbose = true
[includeIf "gitdir:~/Netlife/"]
  path = ~/.config/git/config.netlife
[includeIf "gitdir:~/repos/"]
  path = ~/.config/git/config.personal
[rebase]
	autoStash = true
[merge]
	autoStash = true
[pager]
   diff = diff-so-fancy | less --tabs=1,5 -RFX
   show = diff-so-fancy | less --tabs=1,5 -RFX
[pull]
	rebase = true
[gpg]
	program = gpg
