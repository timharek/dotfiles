CONFIG="~/.config"
REPOS="~/repos"
export DL="~/Downloads"

# Config files
alias edit="$EDITOR ~/.config/zsh/.zshrc"
alias aedit="$EDITOR ~/.config/aliasrc"
alias fedit="$EDITOR ~/.config/functionrc"
alias vedit="$EDITOR ~/.config/nvim/init.vim"
alias gedit="$EDITOR ~/.config/git/config"

# Navigation
alias repos="cd $REPOS"
alias notes="cd ~/notes"
alias dl="cd $DL"

# Repos specific
alias th="cd $REPOS/timharek.no"
alias vk="cd $REPOS/vk/vestkontakt.no"
alias netlife="cd ~/Netlife"
alias fribyte="cd $REPOS/fribyte"

# Binary commands
alias intel="/usr/local/bin/idea"
alias speedtest="speedtest-cli"
alias yr="python3 $REPOS/p-yr/main.py"
alias mv="mv -i"
alias cp="cp -i"
alias rm="rm -i"
alias ss="source ~/.config/zsh/.zshrc"
alias today="date +%F"
alias gs="git s"
alias vim="nvim"
alias l="exa --sort=type"
alias ls="exa --sort=type"
alias exa="exa --sort=type"
alias tree="exa -T"
alias cat="bat"
alias tp="tmux new -s $(basename $(pwd))"

# Misc
alias cv-new="weasyprint https://timharek.no/resume"

# macOS specific
if [[ "$(uname)" == "Darwin" ]]; then
    alias temp="osx-cpu-temp"
    alias bu="brew update && brew upgrade && brew cleanup"
    alias buc="brew update && brew upgrade && brew upgrade --cask --greedy && brew cleanup"
    
    # Apps
    alias imgopt="open -a ImageOptim ."
fi
