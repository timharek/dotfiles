CONFIG="~/.config"
REPOS="~/repos"
export DL="~/Downloads"

alias code="codium"

# Config files
alias edit="$EDITOR ~/.config/zsh/.zshrc"
alias aedit="$EDITOR ~/.config/aliasrc"
alias fedit="$EDITOR ~/.config/functionrc"
alias vedit="$EDITOR ~/.config/nvim/init.lua"
alias gedit="$EDITOR ~/.config/git/config"

# Navigation
alias repos="cd $REPOS"
alias notes="cd ~/notes"
alias dl="cd $DL"

# Repos specific
alias th="cd $REPOS/_personal/timharek.no"
alias vk="cd $REPOS/_vk/vestkontakt.no"
alias netlife="cd ~/Netlife"
alias fribyte="cd $REPOS/_fribyte"

# Binary commands
alias speedtest="speedtest-cli"
alias mv="mv -i"
alias cp="cp -i"
alias rm="rm -i"
alias ss="source ~/.config/zsh/.zshrc"
alias today="date +%F"
alias gs="git s"
alias vim="nvim"
alias ls="exa --sort=type --icons"
alias l="exa --sort=type --icons"
alias exa="exa --sort=type --icons"
alias tree="exa --sort=type --icons -T"
alias cat="bat"
alias tp="tmux new -s $(basename $(pwd))"

# Misc
alias cv-new="weasyprint https://timharek.no/resume"
alias norid="whois -p 79 -h finger.norid.no"

# macOS specific
if [[ "$(uname)" == "Darwin" ]]; then
    alias temp="osx-cpu-temp"
    alias bu="brew update && brew upgrade && brew cleanup"
    alias buc="brew update && brew upgrade && brew upgrade --cask --greedy && brew cleanup"
    
    # Apps
    alias imgopt="open -a ImageOptim ."

    # etc
    alias dnsflush="sudo killall -HUP mDNSResponder"
fi
